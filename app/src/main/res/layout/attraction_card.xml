    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape"
        android:padding="10dp"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/attraction_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="test123"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/attraction_card_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="textEnd"
                android:text="Rating: 4.5/5"
                android:textStyle="italic"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/attraction_card_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Creation Date: 2023/01/01"
            android:textStyle="italic"
            android:textAlignment="textEnd"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/attraction_card_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/view_map_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View on map"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/modify_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_edit"/>
            <ImageButton
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_delete"/>
            <ImageButton
                android:id="@+id/share_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_share"/>
        </LinearLayout>

    </LinearLayout>

